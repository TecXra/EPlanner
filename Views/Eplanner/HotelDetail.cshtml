                                        <option>Single Room</option>
                                        <option>Double Room</option>
                                        <option>Adjoing Room</option>
                                        <option>Studio Room</option>
                                        <option>Deluxe Room</option>
                                        <option>Club Room</option>
                                        <option>Executive Suite Room</option>
                                    </datalist>
                                </div>
                            </div>
                            <div class="form-group col-lg-6">
                                <div class="input-group">
                                    <label>Guests: </label><br />
                                    <!--<div class="input-group-addon">Guests: </div>-->
                                    <input list="adults" name="adults" class="form-control" placeholder="--Adults--" style="width:240px; border-radius:5px;">
                                    <datalist id="adults">
                                        <option>1</option>
                                        <option>2</option>
                                        <option>3</option>
                                        <option>4</option>
                                        <option>5</option>
                                        <option>6 & up</option>
                                    </datalist>
                                    <input list="children" name="children" class="form-control" placeholder="--Children--" style="width:240px; border-radius:5px;">
                                    <datalist id="children">
                                        <option>1</option>
                                        <option>2</option>
                                        <option>3</option>
                                        <option>4</option>
                                        <option>5</option>
                                        <option>6 & up</option>
                                    </datalist>
                                </div>
                            </div>
                        </div>
                        <input type="submit" value="Reserve My Room" class="btn btn-success" style="margin-left:43%;">
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
