            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Enter Detail:</h4>
                </div>
                <div class="modal-body">
                    <form action="~/Eplanner/Confirmation">
                        <div class="col-lg-12">
                            <div class="form-group col-lg-6">
                                <label>Arrival Date: </label>
                                <div class="inner-addon right-addon" style="width:100%;">
                                    <i class="glyphicon glyphicon-calendar"></i>
                                    <input type="date" class="form-control" placeholder="Search" />
                                </div>
                            </div>
                            <div class="form-group col-lg-6">
                                <label>Departure Date: </label>
                                <div class="inner-addon right-addon" style="width:100%;">
                                    <i class="glyphicon glyphicon-calendar"></i>
                                    <input type="date" class="form-control" placeholder="Search" />
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group col-lg-6">
                                <div class="input-group">
                                    <label>Room Type: </label>
                                    <input list="room" name="room" class="form-control" placeholder="--Select Room Type--" style="width:100%;; border-radius:5px;">
